<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayoutListScanCompany"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/my_border">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Имя компании:" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ИНН:" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="КПП:" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ОГРН:" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameCompanyRV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Имя" />

            <TextView
                android:id="@+id/InnCompanyRV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ИНН" />

            <TextView
                android:id="@+id/KppCompanyRV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="КПП" />

            <TextView
                android:id="@+id/OgrnCompanyRV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ОГРН" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>