<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linerLayoutListAddCompany"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/my_border"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Имя компании:" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ИНН:" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="КПП:" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ОГРН:" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nameCompanyRvAddCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Имя" />

        <TextView
            android:id="@+id/InnCompanyRvAddCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ИНН" />

        <TextView
            android:id="@+id/KppCompanyRvAddCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="КПП" />

        <TextView
            android:id="@+id/OgrnCompanyRvAddCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ОГРН" />
    </LinearLayout>
</LinearLayout>